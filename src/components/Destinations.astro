---
import "@fontsource-variable/nunito";
import "@fontsource-variable/fredoka";
import ib from "../assets/islas-ballestas.jpg";
import rnp from "../assets/roja.jpg";
import huacachina from "../assets/huacachina.jpg";
import cuzco from "../assets/cuzco.jpg";

const destinations = [
  {
    title: "Paracas",
    location: "Perú",
    image: ib.src,
  },
  {
    title: "Ica",
    location: "Perú",
    image: rnp.src,
  },
  {
    title: "Nazca",
    location: "Perú",
    image: huacachina.src,
  },
  {
    title: "Cañete",
    location: "Perú",
    image: ib.src,
  },
  {
    title: "Cuzco",
    location: "Perú",
    image: cuzco.src,
  },
];
---

<div class="p-6 bg-gray-50">
  <p
    class="text-4xl font-semibold mb-4 py-2 fredoka-script text-center text-green-900"
  >
    DESTINOS
  </p>
  <div class="hidden md:grid grid-cols-3 gap-5 nunito-script">
    <div
      class="col-span-1 row-span-1 relative rounded-xl overflow-hidden group shadow-md hover:shadow-xl transition aspect-[2/3]"
    >
      <img
        src={destinations[0].image}
        alt={destinations[0].title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
      <div
        class="absolute inset-0 bg-black/10 group-hover:bg-black/30 transition"
      >
      </div>
      <div class="absolute bottom-3 left-3 text-white z-10">
        <h3 class="text-base font-semibold">{destinations[0].title}</h3>
        <p class="text-xs">{destinations[0].location}</p>
      </div>
    </div>

    <!-- Parte superior derecha: 2 imágenes -->
    <div class="col-span-2 grid grid-cols-2 gap-5">
      {
        destinations.slice(1, 5).map((dest) => (
          <div class="relative rounded-xl overflow-hidden group shadow-md hover:shadow-xl transition aspect-[4/2.91]">
            <img
              src={dest.image}
              alt={dest.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-black/10 group-hover:bg-black/30 transition" />
            <div class="absolute bottom-2 left-2 text-white z-10">
              <h3 class="text-sm font-semibold">{dest.title}</h3>
              <p class="text-xs">{dest.location}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Versión móvil -->
  <div class="flex flex-col gap-5 md:hidden">
    {
      destinations.map((dest) => (
        <div class="relative rounded-xl overflow-hidden group shadow-md hover:shadow-xl transition aspect-[4/3]">
          <img
            src={dest.image}
            alt={dest.title}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          />
          <div class="absolute inset-0 bg-black/10 group-hover:bg-black/30 transition" />
          <div class="absolute bottom-3 left-3 text-white z-10">
            <h3 class="text-base font-semibold">{dest.title}</h3>
            <p class="text-xs">{dest.location}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
